---
import ListItem from '../components/ListItem.astro';
import { Props as ListItemProps } from './ListItem.astro'
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="c-list">
  <h2 class="c-list__title">{ title }</h2>
  <ul class="c-list__list">
    <slot></slot>
  </ul>
</div>

<style lang="scss">
  .c-list {
    + .c-list { margin-top: 7.5rem; } 
    &__title { margin-top: 0; }
    &__list { margin-top: 2rem; width: 34rem; max-width: 100%; font-size: var(--font-size-h3); }
  }
</style>
